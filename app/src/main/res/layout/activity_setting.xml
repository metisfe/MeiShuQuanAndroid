<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.metis.meishuquan.activity.info.SettingActivity"
    android:background="#e2e2e2"
    >
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_modify_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_modify_pwd"
        bs:secondaryTextVisible="false"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_clear_cache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_clear_cache"
        bs:secondaryTextVisible="true"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/about_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:imageVisible="false"
        bs:secondaryTextVisible="true"
        bs:text="@string/about_check_update"
        android:layout_marginTop="@dimen/px_to_dip_10"
        ></com.metis.meishuquan.view.shared.MyInfoBtn>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_about_us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_about_us"
        bs:secondaryTextVisible="false"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
    <Button
        android:id="@+id/setting_logout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/common_color_fb6d6d"
        android:text="@string/setting_logout"
        android:textColor="#F1F1F1"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
