<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.metis.meishuquan.activity.info.SettingActivity"
    android:background="#cccccc"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/bg_topline_topbar"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:text="@string/my_info_settings"
            android:gravity="center"
            android:textColor="@color/tv_title_bar"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_modify_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_modify_pwd"
        bs:secondaryTextVisible="false"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_clear_cache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_clear_cache"
        bs:secondaryTextVisible="false"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:id="@+id/setting_about_us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:text="@string/setting_about_us"
        bs:secondaryTextVisible="false"
        bs:imageVisible="false"
        android:layout_marginTop="@dimen/px_to_dip_10"
        />
</LinearLayout>
