<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#cccccc"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_weixin_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_btn_cancle"
            android:layout_alignStart="@+id/id_btn_cancle"
            android:text="微信好友" />

        <Button
            android:id="@+id/btn_weixin_friends_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_weixin_share"
            android:text="微信朋友圈" />

        <Button
            android:id="@+id/id_btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_weixin_share"
            android:layout_marginTop="46dp"
            android:text="取消" />
    </RelativeLayout>
</RelativeLayout>