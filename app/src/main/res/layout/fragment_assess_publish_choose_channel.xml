<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2d2a40">

        <Button
            android:id="@+id/id_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_btn_commentlist_filter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#2d2a40"
            android:text="返回"
            android:textColor="#CFD3ED"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/id_btn_commentlist_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#2d2a40"
            android:text="选择类别"
            android:textColor="#FF5363"
            android:textSize="20sp" />
    </RelativeLayout>

    <!--类别 gridView-->
    <GridView
        android:id="@+id/id_gridview_assess_choose_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title_bar"
        android:numColumns="3"
        android:padding="20dp" />
</RelativeLayout>