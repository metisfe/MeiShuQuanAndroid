<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/transparent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main_tab_bar">

        <RelativeLayout
            android:id="@+id/view_shared_tabbar_followees"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_followees_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_followees_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Top line"
                android:textSize="11dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/view_shared_tabbar_topstory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_topstory_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_topstory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Comment"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_shared_tabbar_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <!--<TextView-->
            <!--android:id="@+id/view_shared_tabbar_circle_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginBottom="3dp"-->
            <!--android:background="@null"-->
            <!--android:clickable="false"-->
            <!--android:ellipsize="end"-->
            <!--android:gravity="center"-->
            <!--android:includeFontPadding="false"-->
            <!--android:singleLine="true"-->
            <!--android:text="Comment"-->
            <!--android:textSize="11dp" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_shared_tabbar_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_discover_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_discover_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Class"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_shared_tabbar_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/view_shared_tabbar_activity_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Me"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/view_shared_tabbar_circle_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_tabbar_circle_selected"
        android:clickable="false"
        android:scaleType="fitCenter" />

</RelativeLayout>