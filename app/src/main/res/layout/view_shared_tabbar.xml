<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/transparent"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main_tab_bar">

        <RelativeLayout
            android:id="@+id/view_tabbar_topLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_followees_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_followees_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Top line"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_tabbar_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_topstory_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_topstory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Comment"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_tabbar_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_discover_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:visibility="gone"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_discover_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Class"
                android:visibility="gone"
                android:textSize="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_tabbar_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true">

            <ImageView
                android:id="@+id/view_shared_tabbar_circle_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_circle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Circle"
                android:textSize="11dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/view_tabbar_myinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/view_shared_tabbar_activity_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/view_shared_tabbar_activity_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/view_shared_tabbar_activity_icon"
                android:layout_alignTop="@+id/view_shared_tabbar_activity_icon"
                android:background="@drawable/red_round_conner_bg"
                android:gravity="center"
                android:minHeight="10dp"
                android:minWidth="12dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/view_shared_tabbar_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Me"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/view_shared_tabbar_center_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_tabbar_course"
        android:clickable="false"
        android:scaleType="fitCenter" />

</RelativeLayout>