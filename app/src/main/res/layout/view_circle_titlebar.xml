<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#2d2a40">

    <RelativeLayout
        android:id="@+id/views_circle_titlebar_leftbutton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/views_circle_titlebar_leftbuttontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/common_color_cfd5e0"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/views_circle_titlebar_leftbuttonimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/views_circle_titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:maxLength="6"
        android:text="首页"
        android:textColor="#fb6d6d"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/views_circle_titlebar_rightbutton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/views_circle_titlebar_rightbuttontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color_cfd5e0"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/views_circle_titlebar_rightbuttonimage"
            android:layout_width="22.5dp"
            android:layout_alignParentRight="true"
            android:layout_height="22.5dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>