<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:background="#f0f0f0"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/action_repost"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:src="@drawable/circle_moment_detail_share" />

        <TextView
            android:id="@+id/tv_repost_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#7e7e7e" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_comment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:src="@drawable/ic_action_topline_comment_count" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#7e7e7e" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_like"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@id/id_img_support"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_unsupport" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.5dp"
                android:layout_marginLeft="2dp"
                android:text="(6)"
                android:layout_toRightOf="@+id/id_img_support"
                android:textSize="14sp"
                android:textColor="#7e7e7e" />

            <TextView
                android:id="@+id/id_tv_add_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=" + 1"
                android:textColor="@color/red"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>