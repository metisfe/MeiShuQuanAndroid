<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.metis.meishuquan.view.circle.CircleTitleBar
        android:id="@+id/activity_circle_chatfriendselectionactivity_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/activity_circle_chatfriendselectionactivity_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:iconifiedByDefault="false"
        android:queryHint="搜索"
        android:inputType="textFilter"
        android:hint="搜索" />

    <ExpandableListView
        android:id="@+id/activity_circle_chatfriendselectionactivity_list"
        android:background="#ffffff"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#cccccc"
        android:textFilterEnabled="true"
        android:dividerHeight="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>