<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/view_shared_corner_round_all"
    android:focusable="true">

    <ImageView
        android:id="@+id/view_shared_basedialog_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_shared_basedialog_maintitle_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/link_color"/>

        <TextView
            android:id="@+id/view_shared_basedialog_subtitle_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_shared_basedialog_titledivide_textview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/link_color"/>

    <LinearLayout
        android:id="@+id/view_shared_basedialog_content_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_shared_basedialog_content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:singleLine="false"
            android:maxLines="10"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_shared_basedialog_checkbox_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/view_shared_basedialog_checkbox"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:checked="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/view_shared_basedialog_checkbox_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:includeFontPadding="false"
            android:text="tell my friends"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@null" >

        <Button
            android:id="@+id/view_shared_basedialog_negativebutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/view_shared_corner_round_leftbottom"/>

        <TextView
            android:id="@+id/view_shared_basedialog_buttondivide_textview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <Button
            android:id="@+id/view_shared_basedialog_positivebutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/view_shared_corner_round_rightbottom"/>
    </LinearLayout>
</LinearLayout>