<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/id_rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#f0f0f0"
        android:padding="10dp">

        <ImageView
            android:id="@+id/id_img_comment_user_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/default_user_dynamic" />

        <TextView
            android:id="@+id/id_tv_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_img_comment_user_portrait"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/id_img_comment_user_portrait"
            android:text="张三"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv_comment_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_tv_comment_user_name"
            android:layout_alignParentRight="true"
            android:text="10分钟前"
            android:textColor="#7e7e7e"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/id_tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/id_tv_comment_user_name"
            android:text="回复"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv_reply_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_tv_reply"
            android:text="王老师" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_tv_comment_user_name"
            android:layout_below="@+id/id_tv_comment_user_name"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/id_btn_play_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chatto_bg_focused">

                <View
                    android:id="@+id/id_view_anim"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/adj"></View>
            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_recorder_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="9'"
                android:textColor="#424242"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/id_rl_content"
        android:background="#cccccc" />

</RelativeLayout>