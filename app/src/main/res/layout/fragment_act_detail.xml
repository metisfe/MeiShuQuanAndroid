<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/act_detail_cover"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/act_cover_height"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/act_detail_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textColor="#424242"
                android:layout_below="@+id/act_detail_cover"
                />
            <TextView
                android:id="@+id/act_detail_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_detail_title"
                android:textSize="16sp"
                android:textColor="#7e7e7e"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/act_detail_award"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_detail_desc"
                android:textSize="16sp"
                android:textColor="#7e7e7e"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/act_detail_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_detail_award"
                android:textSize="16sp"
                android:textColor="#7e7e7e"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/act_detail_join"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/act_join_btn_bg"
                android:text="@string/act_title_join"
                android:gravity="center"
                android:layout_below="@+id/act_detail_text"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/act_check_studio"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="35dp"
                android:textColor="@android:color/white"
                android:background="@drawable/act_join_btn_bg"
                android:text="@string/act_title_check"
                android:gravity="center"
                android:layout_below="@+id/act_detail_join"
                android:visibility="gone"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>