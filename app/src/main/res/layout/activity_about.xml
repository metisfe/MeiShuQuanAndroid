<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc"
    tools:context="com.metis.meishuquan.activity.AboutActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/bg_topline_topbar"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:text="@string/setting_about_us"
            android:gravity="center"
            android:textColor="@color/tv_title_bar"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:imageVisible="false"
        bs:secondaryTextVisible="false"
        bs:text="@string/about_to_score"
        android:layout_marginTop="10dp"
        ></com.metis.meishuquan.view.shared.MyInfoBtn>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:imageVisible="false"
        bs:secondaryTextVisible="false"
        bs:text="@string/about_current_version"
        android:layout_marginTop="10dp"
        ></com.metis.meishuquan.view.shared.MyInfoBtn>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:imageVisible="false"
        bs:secondaryTextVisible="false"
        bs:text="@string/about_meishuquan"
        android:layout_marginTop="10dp"
        ></com.metis.meishuquan.view.shared.MyInfoBtn>
    <com.metis.meishuquan.view.shared.MyInfoBtn
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:imageVisible="false"
        bs:secondaryTextVisible="false"
        bs:text="@string/about_statement"
        android:layout_marginTop="10dp"
        ></com.metis.meishuquan.view.shared.MyInfoBtn>
</LinearLayout>
