<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/fragment_circle_onlinesearchfragment_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false" />

    <Button
        android:id="@+id/fragment_circle_onlinesearchfragment_search"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:text="查询" />

    <Button
        android:id="@+id/fragment_circle_onlinesearchfragment_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="增加"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_circle_onlinesearchfragment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>