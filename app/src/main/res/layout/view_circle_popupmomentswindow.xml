<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp">

        <com.metis.meishuquan.view.shared.ArrowView
            android:id="@+id/view_circle_popupaddwindow_arrow"
            android:layout_height="10dp"
            android:layout_width="10dp"
            android:alpha="0.7"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#B3000000"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:text="全部" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:text="我的主页" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:text="朋友圈" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:text="特别关注" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="我的老师" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/view_circle_popupaddwindow_tv6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="我的同学" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>