<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <View
        android:id="@+id/view_circle_contactlistitemview_check"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_centerVertical="true" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/view_circle_contactlistitemview_image"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_circle_contactlistitemview_check"
        android:background="#000000"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/view_circle_contactlistitemview_namecontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_circle_contactlistitemview_image"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/view_circle_contactlistitemview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="张三"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_circle_contactlistitemview_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="申请理由"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/view_circle_contactlistitemview_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="张三"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:background="#ff0000"/>

        <TextView
            android:id="@+id/view_circle_contactlistitemview_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="已增加"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>