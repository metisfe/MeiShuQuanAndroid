<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <View
        android:id="@+id/view_circle_contactlistitemview_check"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/view_circle_contactlistitemview_image"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_circle_contactlistitemview_check"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/view_circle_contactlistitemview_namecontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_circle_contactlistitemview_image"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/view_circle_contactlistitemview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="张三"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_circle_contactlistitemview_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/view_circle_contactlistitemview_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/view_circle_contactlistitemview_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="已添加"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/view_circle_contactlistitemview_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/view_circle_contactlistitemview_next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>