<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.meishuquan.activity.info.DataListActivity">
    <com.metis.meishuquan.view.shared.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:titleText="@string/my_info_collections"
        />
    <fragment
        android:id="@+id/my_favorites_fragment"
        android:name="com.metis.meishuquan.fragment.commons.DataListFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        />
</RelativeLayout>
