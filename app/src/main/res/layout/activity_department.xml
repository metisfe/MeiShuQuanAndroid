<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    tools:context="com.metis.meishuquan.activity.info.DepartmentActivity">
    <com.metis.meishuquan.view.shared.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:titleText="@string/info_department"
        bs:titleTextRight="@string/department_add"
        />
    <ListView
        android:id="@+id/department_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        />
</RelativeLayout>
