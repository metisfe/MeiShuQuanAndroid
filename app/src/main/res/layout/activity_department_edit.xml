<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.meishuquan.activity.info.DepartmentEditActivity">
    <RelativeLayout
        android:id="@+id/department_edit_container"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/title"
        >
        <TextView
            android:id="@+id/department_edit_title"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#424242"
            android:textSize="16sp"
            android:text="@string/department_title"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/department_edit_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/department_edit_title"
            android:textColor="#7c7c7c"
            android:textSize="13dp"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/department_edit_container"
        >
        <include
            layout="@layout/divider_horizontail"
            />
        <TextView
            android:id="@+id/department_edit_duration_title"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#424242"
            android:textSize="16sp"
            android:text="@string/department_duration"
            android:gravity="center"/>
        <TextView
            android:id="@+id/department_edit_duration_start"
            android:layout_width="58dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            style="@style/info_secondaryTextStyle"
            android:layout_toRightOf="@+id/department_edit_duration_title"
            android:gravity="center"
            android:layout_marginLeft="27dp"
            android:background="@android:color/transparent"
            android:inputType="date"
            android:hint="2009-09"
            android:maxLength="7"
            />
        <TextView
            android:id="@+id/department_edit_duration_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/department_to"
            style="@style/info_textStyle"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/department_edit_duration_start"
            />
        <TextView
            android:id="@+id/department_edit_duration_end"
            android:layout_width="58dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            style="@style/info_secondaryTextStyle"
            android:layout_toRightOf="@+id/department_edit_duration_to"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:inputType="date"
            android:hint="2013-06"
            android:maxLength="7"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/department_edit_container"
        android:visibility="gone"
        />
</RelativeLayout>
