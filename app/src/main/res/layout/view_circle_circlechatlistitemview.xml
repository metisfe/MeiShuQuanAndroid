<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/views_circle_circlechatlistitemview_image"
        android:layout_width="80dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_title"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>

</LinearLayout>