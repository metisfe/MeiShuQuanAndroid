<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/bg_listview"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/views_circle_circlechatlistitemview_image"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_portrait_fang"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#b4b4b4"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_title"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:text="测试"
            android:layout_toLeftOf="@id/views_circle_circlechatlistitemview_time"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:textSize="13sp"
            android:textColor="#b4b4b4"
            android:text="消息"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>