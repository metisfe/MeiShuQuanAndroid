<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/views_circle_circlechatlistitemview_image"
        android:layout_width="70dp"
        android:layout_margin="10dp"
        android:layout_height="70dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_title"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/views_circle_circlechatlistitemview_time"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/views_circle_circlechatlistitemview_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center_vertical"
            android:layout_height="30dp" />
    </RelativeLayout>

</LinearLayout>