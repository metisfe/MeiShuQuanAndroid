<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.meishuquan.activity.info.AdvanceActivity">
    <LinearLayout
        android:id="@+id/advance_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:background="@drawable/edittext_outlines_bg"
        android:layout_margin="10dp"
        >
        <EditText
            android:id="@+id/advance_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="8"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:gravity="top|left"
            android:hint="@string/advance_hint"
            />
        <ImageView
            android:id="@+id/advance_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/advance_add_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/advance_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advance_details"
        android:text="@string/advance_tip"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/advance_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/advance_tip"
        android:background="@drawable/edittext_outlines_bg"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="@string/advance_hint_contact"
        />
</RelativeLayout>
