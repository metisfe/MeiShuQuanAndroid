<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.metis.meishuquan.view.circle.CircleTitleBar
        android:id="@+id/fragment_shared_circlefragment_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/fragment_shared_circlefragment_topbar_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_shared_circlefragment_title_bar" />

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_circlefragment_tab_bar"
        bs:tabbarType="circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_shared_circlefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_shared_circlefragment_topbar_indicator"
        android:layout_above="@id/fragment_shared_circlefragment_tab_bar" />

