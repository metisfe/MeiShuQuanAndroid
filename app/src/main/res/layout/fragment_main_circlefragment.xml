<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_listview">

    <com.metis.meishuquan.view.circle.CircleTitleBar
        android:id="@+id/fragment_shared_circlefragment_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/fragment_shared_circlefragment_topbar_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/fragment_shared_circlefragment_title_bar"
        android:background="@drawable/bg_main_tab_bar"
        android:contentDescription="mycustom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_shared_circlefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_shared_circlefragment_topbar_indicator"
        android:background="@color/bg_listview" />

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_circlefragment_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        bs:tabbarType="circle" />

    <!--<com.metis.meishuquan.view.shared.TabBar-->
