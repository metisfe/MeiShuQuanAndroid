<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/focus_item_profile"
        android:layout_width="@dimen/student_list_item_profile_item"
        android:layout_height="@dimen/student_list_item_profile_item"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/focus_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/focus_item_profile"
        android:layout_toLeftOf="@+id/focus_item_btn"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/focus_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#9f9f9f"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/focus_item_profile"
        android:layout_toLeftOf="@+id/focus_item_btn"
        android:layout_below="@+id/focus_item_name"
        android:layout_marginBottom="10dp"
        />
    <ImageButton
        android:id="@+id/focus_item_btn"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="#cccccc"
        />
</RelativeLayout>