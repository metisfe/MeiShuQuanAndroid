<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_e2e2e2"
    tools:context="com.metis.meishuquan.activity.circle.SearchUserInfoActivity">

    <RelativeLayout
        android:id="@+id/id_rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#2d2a40">

        <Button
            android:id="@+id/id_btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细资料"
            android:textColor="#fb6d6d"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_rl_topbar"
        android:background="@color/common_color_f0f0f0"
        android:padding="10dp">

        <ImageView
            android:id="@+id/id_img_user_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/default_portrait_fang" />

        <TextView
            android:id="@+id/id_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_img_user_portrait"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="昵称" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_rl_userinfo"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_btn_add_friend"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/common_color_fb6d6d"
            android:text="添加至通讯录"
            android:visibility="gone"
            android:textColor="@color/common_color_f0f0f0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/id_btn_request_friend"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/common_color_fb6d6d"
            android:text="邀请好友"
            android:textColor="@color/common_color_f0f0f0"
            android:visibility="gone"
            android:textSize="18sp" />

        <Button
            android:id="@+id/id_btn_send_chat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/common_color_fb6d6d"
            android:text="发消息"
            android:visibility="gone"
            android:textColor="@color/common_color_f0f0f0"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
