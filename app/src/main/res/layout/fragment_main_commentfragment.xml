<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fddd6e">

        <Button
            android:id="@+id/id_btn_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="全国" />

        <Button
            android:id="@+id/id_btn_commentlist_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="全部" />

        <Button
            android:id="@+id/id_btn_assess_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:text="提问" />
    </RelativeLayout>

    <com.metis.meishuquan.view.shared.DragListView
        android:id="@+id/id_fragment_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title_bar"
        android:background="#cccccc"
        android:layout_above="@+id/fragment_shared_commentfragment_tab_bar" />

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_commentfragment_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        bs:tabbarType="topstory" />
</RelativeLayout>