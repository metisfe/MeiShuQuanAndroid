<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#2d2a40">

        <Button
            android:id="@+id/id_btn_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_ll_commentlist_filter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#2d2a40"
            android:text="全国"
            android:textColor="#CFD3ED"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/id_ll_commentlist_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/id_btn_commentlist_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2d2a40"
                android:text="全部"
                android:textColor="#FF5363"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bg_btn_arrow_selected_down" />
        </LinearLayout>


        <Button
            android:id="@+id/id_btn_assess_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_ll_commentlist_filter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="#2d2a40"
            android:text="提问"
            android:textColor="#CFD3ED"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_ll_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_title_bar"
        android:background="#f0f0f0">

        <Button
            android:id="@+id/id_btn_recommend"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="精选推荐"
            android:textColor="#Fb6d6d"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_btn_new_publish"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="最新发布"
            android:textColor="#7e7e7e"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_btn_hot_course"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="最热评论"
            android:textColor="#7e7e7e"
            android:textSize="15sp" />
    </LinearLayout>

    <com.metis.meishuquan.view.shared.DragListView
        android:id="@+id/id_fragment_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_shared_commentfragment_tab_bar"
        android:layout_below="@+id/id_ll_tab"
        android:background="#cccccc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_commentfragment_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        bs:tabbarType="topstory" />
</RelativeLayout>