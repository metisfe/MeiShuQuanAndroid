<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2d2a40">

        <Button
            android:id="@+id/id_btn_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_btn_commentlist_filter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#2d2a40"
            android:text="全国"
            android:textColor="#CFD3ED"
            android:textSize="17sp" />

        <Button
            android:id="@+id/id_btn_commentlist_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#2d2a40"
            android:text="全部"
            android:textColor="#FF5363"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_btn_assess_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_btn_commentlist_filter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="#2d2a40"
            android:text="提问"
            android:textColor="#CFD3ED"
            android:textSize="17sp" />
    </RelativeLayout>

    <com.metis.meishuquan.view.shared.DragListView
        android:id="@+id/id_fragment_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_shared_commentfragment_tab_bar"
        android:layout_below="@+id/rl_title_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#E3E3E3"/>

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_commentfragment_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        bs:tabbarType="topstory" />
</RelativeLayout>