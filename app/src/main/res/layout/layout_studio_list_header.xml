<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    >
    <ImageView
        android:id="@+id/studio_list_header_cover"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/studio_list_header_extras"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#cfd5ec"
        android:gravity="center"
        android:layout_alignBottom="@+id/studio_list_header_cover"
        />
    <Button
        android:id="@+id/studio_list_header_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/studio_btn_red"
        android:layout_alignBottom="@+id/studio_list_header_extras"
        android:layout_alignRight="@+id/studio_list_header_extras"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <GridLayout
        android:id="@+id/studio_list_header_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_below="@+id/studio_list_header_cover"
        android:layout_centerHorizontal="true"
        >
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
        <include
            layout="@layout/layout_studio_menu_item"
            style="@style/studio_menu_item_style"
            />
    </GridLayout>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/studio_list_header_menu"
        android:background="#e2e2e2"
        android:minHeight="33dp"
        android:layout_marginTop="10dp"
        >
        <RadioButton
            style="@style/studio_radio_btn_style"
            android:text="1"
            android:checked="true"
            />
        <RadioButton
            style="@style/studio_radio_btn_style"
            android:text="1"
            />
        <RadioButton
            style="@style/studio_radio_btn_style"
            android:text="1"
            />
    </RadioGroup>
</RelativeLayout>