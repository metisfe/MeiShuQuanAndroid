<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_img_monkey"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/pic_developer" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_img_monkey"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="程序员正在努力加班加点中,精彩内容即将开放"
        android:textColor="@color/common_color_424242" />

    <com.metis.meishuquan.view.shared.TabBar
        android:id="@+id/fragment_shared_circlefragment_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        bs:tabbarType="topstory"/>

</RelativeLayout>