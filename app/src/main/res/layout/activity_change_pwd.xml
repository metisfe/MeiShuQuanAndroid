<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical"
    tools:context="com.metis.meishuquan.activity.info.ChangePwdActivity">
    <com.metis.meishuquan.view.shared.TitleView
        xmlns:bs="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bs:titleText="@string/setting_modify_pwd"
        />
    <EditText
        android:id="@+id/change_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F1F1F1"
        android:hint="@string/change_pwd_old"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/change_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F1F1F1"
        android:hint="@string/change_pwd_new"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/change_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F1F1F1"
        android:hint="@string/change_pwd_confirm"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/change_pwd_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/id_resister_et_pwd"
        android:layout_marginTop="20dp"
        android:background="#FF5363"
        android:text="@string/change_pwd_positive"
        android:textColor="#F1F1F1"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
