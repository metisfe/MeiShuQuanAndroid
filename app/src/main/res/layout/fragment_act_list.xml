<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/act_list_spanner_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Spinner
            android:id="@+id/act_list_filter_1"
            style="@style/act_list_spanner"
            />
        <Spinner
            android:id="@+id/act_list_filter_2"
            style="@style/act_list_spanner"
            />
        <Spinner
            android:id="@+id/act_list_filter_3"
            style="@style/act_list_spanner"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/act_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/act_list_spanner_group"
        />
</RelativeLayout>